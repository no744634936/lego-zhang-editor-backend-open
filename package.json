{
  "name": "lego-zhang-editor-backend",
  "version": "0.3.11",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "dev": "cross-env NODE_ENV=dev ./node_modules/.bin/nodemon bin/www",
    "prd-dev": "cross-env NODE_ENV=prd_dev pm2 start bin/pm2-prd-dev.config.js",
    "prd": "cross-env NODE_ENV=production ENABLE_NODE_LOG=YES pm2 start bin/pm2-prd.config.js",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand --passWithNoTests --forceExit --colors",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand --passWithNoTests --forceExit --colors",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint-fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "lint-staged": "lint-staged",
    "heart-beat-check": "pm2 start bin/heart-beat-check.pm2.json",
    "release": "release-it",
    "just-try-release": "release-it --dry-run"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run lint",
      "npm run test:local"
    ]
  },
  "dependencies": {
    "ajv": "^8.10.0",
    "aws-sdk": "^2.1081.0",
    "axios": "^0.26.0",
    "baidu-aip-sdk": "^4.15.8",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "ejs": "^2.7.4",
    "formidable": "^1.2.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.3",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "redis": "^3.1.2",
    "require-all": "^3.0.0",
    "sequelize": "^6.16.2",
    "simple-git": "^3.2.6",
    "supertest": "^6.2.2",
    "uuidv4": "^6.2.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@release-it/conventional-changelog": "^4.2.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "release-it": "^14.12.5"
  }
}
